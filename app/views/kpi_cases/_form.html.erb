<%= error_messages_for :kpi_option_case %>
<section class="form--section">

  <div class="form--field -required">
    <%= f.select :role_id, options_for_select(Role.all.map { |u| [u.name, u.id] }, @kpi_case.role_id), include_blank: true, required: true, container_class: '-wide' %>
  </div>

  <div class="form--field -required">
    <%= f.text_field :percent, size: 2, required: true, container_class: '-wide', class: '-number'%>
  </div>

  <div class="form--field -required">
    <%= f.text_field :min_value, size: 6, required: true, container_class: '-wide', class: '-number'%>
  </div>

  <div class="form--field -required">
    <%= f.text_field :max_value, size: 6, required: true, container_class: '-wide', class: '-number'%>
  </div>

  <div class="form--field">
    <%= f.check_box :enable %>
  </div>

  <div class="form--field -required">
    <%= f.select :period, [%w(ежедневно Daily),
                           %w(еженедельно Weekly),
                           %w(ежемесячно Monthly),
                           %w(ежеквартально Quarterly),
                           %w(ежегодно Yearly)],
                 required: true, container_class: '-wide' %>
  </div>
</section>
