<%= error_messages_for :kpi_option %>
<section class="form--section">

  <div class="form--field -required">
    <%= f.text_field :name, required: true, container_class: '-wide'%>
  </div>

  <div class="form--field -required">
    <%= f.text_field :weight, size: 6, required: true, container_class: '-wide', class: '-number'%>
  </div>

  <div class="form--field">
    <%= f.check_box :enable %>
  </div>

  <div class="form--field -required">
    <%= f.select :calc_method, [['включается в среднее', 'avg'], %w(суммируется sum)], required: true, container_class: '-wide' %>
  </div>
</section>
