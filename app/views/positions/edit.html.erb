<% html_title l(:label_administration), "#{l(:label_edit)} #{Position.model_name.human} #{h @position.name}" %>

<% local_assigns[:additional_breadcrumb] =  @position %>
<%= breadcrumb_toolbar @position %>

<%= labelled_tabular_form_for @position do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <%= styled_button_tag l(:button_save), class: '-highlight -with-icon icon-checkmark' %>
<% end %>

<%= styled_form_tag(position_path(@position), method: :delete) do %>
  <%= styled_submit_tag l(:button_delete) %>
<% end %>
