<% html_title l(:label_administration), "#{l(:label_edit)} #{ProjectRisk.model_name.human} #{h @project_risk.name}" %>

<%= labelled_tabular_form_for @project_risk, url: project_project_risk_path(project_id: @project) do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <%= styled_button_tag l(:button_save), class: '-highlight -with-icon icon-checkmark' %>
<% end %>

<%= styled_form_tag(project_project_risk_path(id: @project_risk.id), method: :delete) do %>
  <%= styled_submit_tag l(:button_delete) %>
<% end %>
