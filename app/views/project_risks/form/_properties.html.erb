<%= labelled_tabular_form_for @project_risk, url: project_project_risk_path(project_id: @project) do |f| %>
  <%= render partial: 'project_risks/form/form', locals: { f: f } %>
  <%= styled_button_tag l(:button_save), class: '-highlight -with-icon icon-checkmark', remote: true%>
<% end %>

<%= styled_form_tag(project_project_risk_path(id: @project_risk.id), method: :delete) do %>
  <%= styled_submit_tag l(:button_delete), remote: true %>
<% end %>
