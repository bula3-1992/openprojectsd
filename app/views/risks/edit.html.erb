<% html_title l(:label_administration), "#{l(:label_edit)} #{Risk.model_name.human} #{h @risk.name}" %>

<% local_assigns[:additional_breadcrumb] =  @risk %>
<%= breadcrumb_toolbar @risk %>

<%= labelled_tabular_form_for @risk do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <%= styled_button_tag l(:button_save), class: '-highlight -with-icon icon-checkmark' %>
<% end %>

<%= styled_form_tag(risk_path(@risk), method: :delete) do %>
  <%= styled_submit_tag l(:button_delete) %>
<% end %>
