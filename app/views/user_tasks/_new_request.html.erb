<div style="width:50%">

  <%= form.hidden_field 'related_task_id', value: params[:related_task_id] %>

  <p>
    <%= form.label 'Справочник' %>
    <%= form.collection_select(:object_type, Enumeration.where(type: 'UserTaskDirectory'), :name.to_s, :name.to_s) %>
  </p>

  <p>
    <%= form.label :assigned_to_id %>
    <%= form.collection_select(:assigned_to_id, User.all, :id, :lastname) %>
  </p>

  <p>
    <%= form.label :text %>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.label 'Требуемая дата ввода' %>
    <%= form.date_field :due_date %>
  </p>

</div>
