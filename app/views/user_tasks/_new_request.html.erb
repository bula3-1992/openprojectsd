<div style="width:50%">

  <%= form.hidden_field 'object_type', value: params[:object_type] %>

  <p>
    <%= form.label :assigned_to_id %>
    <%= form.collection_select(:assigned_to_id, User.all, :id, :lastname) %>
  </p>

  <p>
    <%= form.label :text %>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.label 'Требуемая дата ввода' %>
    <%= form.date_field :due_date %>
  </p>

</div>
